<h1>Portfolio Show</h1>

<p><%= @portfolio_item.title %></p>
<p><%= @portfolio_item.subtitle %></p>
<p><%= @portfolio_item.body %></p>
<%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>

<h3>Technologies Used:</h3>
<%@portfolio_item.technologies.each do |t| %>
  <p><%= t.name %></p>
<% end %>

<%= link_to 'Back', portfolios_path %>
<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>
<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete if logged_in?(:site_admin) %>